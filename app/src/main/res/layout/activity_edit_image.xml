<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ===== TOP BAR ===== -->
    <TextView
        android:id="@+id/btnCancel"
        android:text="Hủy"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/btnSave"
        android:text="Lưu"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#D6B65C"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- ===== IMAGE PREVIEW ===== -->
    <ImageView
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnCancel"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== BOTTOM PANEL ===== -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:orientation="vertical"
        android:background="#000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ===== TOOL ICONS ===== -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- ITEM -->
                <LinearLayout
                    android:id="@+id/btnVintage"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView

                        android:src="@drawable/ic_ai"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="AI Tự động"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnBW"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/ic_color"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Màu sắc"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView

                        android:src="@drawable/ic_brightness"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Độ chói"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView

                        android:src="@drawable/ic_lux"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Lux"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/ic_brightness"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Độ sáng"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/ic_contrast"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Độ tương phản"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- ===== SEEK BAR ===== -->
        <SeekBar
            android:id="@+id/seekBrightness"
            android:max="200"
            android:progress="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- ===== BOTTOM MENU ===== -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Công cụ"
                android:textColor="#777"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Bộ lọc"
                android:textColor="#777"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Film"
                android:textColor="#777"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Điều chỉnh"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Công thức"
                android:textColor="#777"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
